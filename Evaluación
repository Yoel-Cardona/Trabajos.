numero = input("Ingrese un número de 5 dígitos: ")

if len(numero) == 5 and numero.isdigit():S

digitos = [int(d) for d in numero]

ascendente = sorted(digitos)

descendente = sorted(digitos, reverse=True)

print("Número ingresado:", numero)

print("ascendente:", ",".join(map(str, ascendente)))

print("descendente:", ',".join(map(str, descendente)))

else:

print("Número de exactamente 5 dígitos.")
